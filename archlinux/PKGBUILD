#!/hint/bash
# Maintainer: alescdb

pkgname=air-git
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple ChatGPT command line with ansi markdown display"
arch=("x86_64")
url="https://secure.cosinus.org/gitea/alex/air"
license=('Apache')
makedepends=(rust)
conflicts=('aid')
source=('air-git::git+ssh://git@secure.cosinus.org/alex/air.git')
provides=("air=${pkgver%%.r*}")
b2sums=('SKIP')
options=('!strip')

prepare() {
	cd ${pkgname}
}

build() {
	cd ${pkgname}
	cargo build --release
}

package() {
	cd ${pkgname}
	name=${pkgname%%-*}
	install -Dm755 ./target/release/$name -T ${pkgdir}/usr/bin/$name
	ln -sf ${pkgdir}/usr/bin/$name ${pkgdir}/usr/bin/aid
}
